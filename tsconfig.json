{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "empyreanui/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/ui/*"
      ],
      "@apiservices/*": [
        "./src/apiServices/*"
      ],
      "@apiservices": [
        "./src/apiServices"
      ],
      "@customcomponent": [
        "./src/customComponents"
      ],
      "@hooks": [
        "./src/utils/hooks"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/global.d.ts",
    "src/api/*"
  ],
  "exclude": [
    "node_modules"
  ]
}